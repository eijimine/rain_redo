<h1>Edit Product</h1>

<%= simple_form_for @product, :html => { :multipart => true } do |f| %>
  <%= f.select :category_id, @categories %>
  <%= f.file_field :product_img %>
  <%= f.input :name, label: "Product Name" %>
  <%= f.input :description %>
  <%= f.input :price_in_cents %>
  <%= f.button :submit %>
<% end %>
